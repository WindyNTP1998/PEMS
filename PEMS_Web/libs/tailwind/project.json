{
    "name": "tailwind",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/tailwind/src",
    "prefix": "ng-mf",
    "tags": [],
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/angular:ng-packagr-lite",
            "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
            "options": {
                "project": "libs/tailwind/ng-package.json",
                "tailwindConfig": "libs/tailwind/tailwind.config.js"
            },
            "configurations": {
                "production": {
                    "tsConfig": "libs/tailwind/tsconfig.lib.prod.json"
                },
                "development": {
                    "tsConfig": "libs/tailwind/tsconfig.lib.json"
                }
            },
            "defaultConfiguration": "production"
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "libs/tailwind/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["libs/tailwind/**/*.ts", "libs/tailwind/**/*.html", "libs/tailwind/package.json"]
            }
        }
    }
}
