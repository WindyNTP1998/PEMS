{
    "name": "platform-core",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/platform-core/src",
    "prefix": "ng-mf",
    "tags": [],
    "projectType": "library",
    "targets": {
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "libs/platform-core/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["libs/platform-core/**/*.ts", "libs/platform-core/**/*.html"]
            }
        }
    }
}
